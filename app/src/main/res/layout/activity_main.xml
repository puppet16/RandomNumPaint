<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.ltt.painter.MainActivity">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="生成数字位数:"
        android:textColor="@color/text_default"
        android:textSize="@dimen/text_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_number"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:inputType="numberDecimal"
        android:digits="123456789"
        android:maxLength="1"
        android:textColor="@color/text_highlight"
        android:textSize="@dimen/edit_default"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_generate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:text="生成数字"
        android:textColor="@color/text_default"
        android:textSize="@dimen/button_default"
        app:layout_constraintBaseline_toBaselineOf="@id/edt_number"
        app:layout_constraintLeft_toRightOf="@id/edt_number" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="生成的数字："

        android:textColor="@color/text_default"
        android:textSize="@dimen/text_default"
        app:layout_constraintTop_toBottomOf="@id/edt_number" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="@color/text_highlight"
        android:textSize="@dimen/text_large"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_title2"
        app:layout_constraintLeft_toRightOf="@id/tv_title2"
        app:layout_constraintTop_toBottomOf="@id/edt_number"
        tools:text="1234123412" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="268dp"
        android:text="下一步"
        android:textColor="@color/text_default"
        android:textSize="@dimen/button_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="48dp" />
</android.support.constraint.ConstraintLayout>